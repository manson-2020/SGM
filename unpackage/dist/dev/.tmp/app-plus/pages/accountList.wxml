<scroll-view class="root bg-f9" scroll-y><view class="bg-fff pt50 pb50"><block wx:for="{{list}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="list mb50"><image class="avatar" src="{{item.url||avatar}}"></image><view class="describe f1 ml22"><view class="first-column"><view class="name fs30 color-000">{{item.nickname}}</view><view class="tel fs22 color-bf">{{item.member_mobile}}</view></view><view class="second-column"><view class="text fs25 color-9a">{{"学校："+(item.school_address||item.school_name||"未知")}}</view><block wx:if="{{pageType=='member'}}"><view data-event-opts="{{[['tap',[['operation',[index]]]]]}}" class="btn bg-2b9f60 color-fff fs20" bindtap="__e">清除</view></block><block wx:if="{{pageType=='examine'&&item.status==0}}"><view data-event-opts="{{[['tap',[['operation',[index,2]]]]]}}" class="btn bg-2b9f60 color-fff fs20" bindtap="__e">同意</view></block><block wx:if="{{pageType=='examine'&&item.status==1}}"><view class="btn bg-ccc color-fff fs20">已拒绝</view></block><block wx:if="{{pageType=='examine'&&item.status==2}}"><view class="btn bg-ccc color-fff fs20">已通过</view></block></view><block wx:if="{{pageType!='fans'}}"><view class="third-column"><view class="text fs25 color-9a">{{"申请日期："+item.create_time}}</view><block wx:if="{{pageType=='examine'&&item.status==0}}"><view data-event-opts="{{[['tap',[['operation',[index,1]]]]]}}" class="btn bg-fff color-2b9f60 fs20" bindtap="__e">不同意</view></block></view></block></view></view></block></view></scroll-view>