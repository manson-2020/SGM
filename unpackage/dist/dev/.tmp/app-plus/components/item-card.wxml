<scroll-view scroll-y data-event-opts="{{[['scrolltolower',[['loadMore',['$event']]]]]}}" bindscrolltolower="__e"><block wx:for="{{content.data}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="main-item"><block wx:if="{{tab!='organization'}}"><view class="item-header"><navigator class="avatar" url="{{'/pages/'+(item.type==2?'user':'organization')+'Info'+'?userId='+item.user_id+'&type='+item.type}}"><image class="avatar" src="{{item.user_logo}}" mode="aspectFill"></image></navigator><view class="item-title"><view class="item-name"><view class="username fs21 color333">{{item.user_name}}</view><view class="school-name fs18 color-666">{{item.school_name}}</view></view></view><block wx:if="{{tab!='my'&&!(accountInfo.type==item.type&&accountInfo.id==item.user_id)}}"><view><block wx:if="{{!item.is_follow}}"><view data-event-opts="{{[['tap',[['select',[index,1,'follow']]]]]}}" class="follow fs17 color-2b9f60" bindtap="__e">＋关注</view></block><block wx:else><view data-event-opts="{{[['tap',[['select',[index,0,'follow']]]]]}}" class="follow cancel-follow fs17 color-999" bindtap="__e">已关注</view></block></view></block></view></block><view class="fs22 color-aaa ml20 mt20">{{item.original_name?'转载于'+item.original_name:'原创文章'}}</view><block wx:if="{{tab=='organization'}}"><view class="article-title fs32 ml22 mr22">{{item.title}}</view></block><block wx:if="{{item.video}}"><view class="preview-video mt22"><view class="preview-video-image" style="{{('background-image: url('+requestUrl+item.video_img+');')}}"><image class="icon-play" src="/static/icon-play.png" data-event-opts="{{[['tap',[['playVideo',['$0'],[[['content.data','',index,'video']]]]]]]}}" bindtap="__e"></image><view class="shelter"></view></view></view></block><block wx:else><view class="preview-picture mt22 mlr20"><block wx:for="{{item.file}}" wx:for-item="previewItem" wx:for-index="index" wx:key="index"><image class="{{['mb11 '+((index+1)%3!=0&&'mr11')]}}" src="{{previewItem}}" mode="aspectFill"></image></block></view></block><view class="article"><block wx:if="{{tab!='organization'}}"><view class="article-title fs32">{{item.title}}</view></block><view class="article-describe fs22 color-aaa">{{item.content}}</view><view class="article-time fs22 text-right color-aaa">{{item.create_time}}</view></view><view class="operation-box fs22 color-aaa"><block wx:if="{{!item.is_fabulous}}"><label data-event-opts="{{[['tap',[['select',[index,1,'like']]]]]}}" class="operation" bindtap="__e"><image class="icon-like" src="/static/icon-like.png"></image><view class="ml15">{{item.fabulous}}</view></label></block><block wx:else><label data-event-opts="{{[['tap',[['select',[index,0,'like']]]]]}}" class="operation" bindtap="__e"><image class="icon-like" src="/static/icon-liked.png"></image><view class="ml15">{{item.fabulous}}</view></label></block><label data-event-opts="{{[['tap',[['comment',[index]]]]]}}" class="operation" bindtap="__e"><image class="icon-comment" src="/static/icon-comment.png"></image><view class="ml15">{{item.comment}}</view></label><label data-event-opts="{{[['tap',[['share',[index]]]]]}}" class="operation" bindtap="__e"><image class="icon-share" src="/static/icon-share.png"></image><view class="ml15">{{item.forward}}</view></label></view></view></block><view class="loading text-center color-aaa fs33">{{loadingText}}</view></scroll-view>